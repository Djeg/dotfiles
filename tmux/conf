set-option -g default-terminal screen-256color-bce
set-option -g default-shell /bin/zsh
set-option -sg escape-time 10

# rebind default keys
set -g prefix M-a
unbind C-b
bind M-a send-prefix

# split window
bind v split-window -h -c "#{pane_current_path}"
bind s split-window -v -c "#{pane_current_path}"

# hjkl pane traversal
bind h select-pane -L
bind j select-pane -D
bind k select-pane -U
bind l select-pane -R

# Bind new window on current directory
bind c new-window -c "#{pane_current_path}"

# swap window to the beginning
bind L swap-window -t +1
bind H swap-window -t -1

# resize pane
bind L resize-pane -R 10
bind K resize-pane -U 10
bind J resize-pane -D 10
bind H resize-pane -L 10

# reload tmux conf
bind-key r source-file ~/.tmux.conf \; display "Config reloaded"

set -g status-position top
set -g status-fg colour250
set -g status-bg colour233

# left side of status bar
set -g status-left-length 20
set -g status-left "#[fg=colour16,bg=colour254,bold] #S #[fg=colour254,bg=colour233,nobold,nounderscore,noitalics]"

# empty right status
set -g status-right-length 0

# status bar options
set-option -g status-justify left         # alignment of windows
setw -g window-status-fg "colour250"
setw -g window-status-attr "none"
setw -g window-status-activity-bg "colour233"
setw -g window-status-activity-attr "none"
setw -g window-status-activity-fg "colour250"
setw -g window-status-separator ""
setw -g window-status-bg "colour233"
setw -g window-status-format "#[fg=colour244,bg=colour233] #I #[fg=colour250,bg=colour233] #W "
setw -g window-status-current-format "#[fg=colour233,bg=colour31,nobold,nounderscore,noitalics]#[fg=colour117,bg=colour31] #I #[fg=colour231,bg=colour31,bold] #W #[fg=colour31,bg=colour233,nobold,nounderscore,noitalics]"


# message bar
set -g message-fg colour250
set -g message-bg colour233
set -g message-attr bold
set -g pane-border-fg colour236
set -g pane-active-border-fg colour233

# tmuxinator fix
set -g base-index 1
set -g pane-base-index 1
